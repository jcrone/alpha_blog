<div class="container">
  <div class="row">
      <% @category.each do |category| %>
    <div class="col-sm-6 mt-4">
      <div class="shadow mb-5 bg-white rounded">
        <div class="card">
           <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <li><small><%= pluralize(category.articles.count, "article") %></small></li>
            <% if logged_in? && current_user.admin? %>
              <%= link_to 'Edit', edit_category_path(category), class:"btn btn-info" %>
              <%= link_to 'Delete', category_path(category), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %>
            <% end %>
            <br>
          </div>

        </div>
     </div>
    </div>
   <% end %>
  </div>
</div>
