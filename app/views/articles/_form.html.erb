
<div class="container">

  <%= render 'shared/errors', obj: @article %>


  <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-lightgrey rounded", local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Enter Title" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description,class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, rows:10, class: "form-control shadow rounded" %>
      </div>
    </div>
      <div class="form-group">
        <div class="row">
          <div class="col-10">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "form-check form-check-inline") {cb.check_box(class: "form-check-input") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>

    <div class="form-group">
      <div class="col-10">
      <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Cancel return to articles', articles_path  %>

</div>
