
<div class="container">
  <%= render 'shared/errors', obj: @user %>
  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-lightgrey rounded", local: true) do |f| %>

    <div class="form-group">
      <%= f.label :username, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email address" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Create Password" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-10">
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Cancel return to articles', articles_path  %>

</div>
