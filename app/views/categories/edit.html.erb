<div class="container">
<h1 class="mt-4">Edit Category</h1>
</div>

<div class="container">
  <%= render 'shared/errors', obj: @category %>
  <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-lightgrey rounded", local: true) do |f| %>

    <div class="form-group">
      <%= f.label :name, "Category_Name", class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-10">
      <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Cancel return to articles', articles_path  %>

</div>
